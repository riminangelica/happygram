<% if @friend %>
	<h1><%= @friend.full_name %></h1>

	<p>Do you really want to add <%= @friend.full_name %>?</p>

	<%= form_for @friendship, method: :post do |form| %>
		<div class="form form-actions">
			<%= form.hidden_field :friend_id, value: @friend.handle %>
			<%= submit_tag "Yes, Add Friend", class: 'btn btn-primary' %>
			<%= link_to "Cancel", profile_path(@friend), class: 'btn' %>
		</div>
	<% end %>
<% end %>